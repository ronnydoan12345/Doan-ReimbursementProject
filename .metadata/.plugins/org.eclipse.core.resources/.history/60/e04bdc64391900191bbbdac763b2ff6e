package org.revature.ERS.org.revature.ERS;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.PrintWriter;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;

import org.json.JSONObject;
@WebServlet("/EmployeeReimbursementServlet")

public class EmployeeReimbursementServlet extends HttpServlet {

	@Override
	protected void doGet(HttpServletRequest req, HttpServletResponse res) throws ServletException, IOException {
		PrintWriter output = res.getWriter();
		BufferedReader br = req.getReader();
		Service service = new Service();
		JSONObject json = new JSONObject(br.readLine());
		System.out.println(json);
		System.out.println("my id" + json.getInt("id"));
		Reimbursement reimbursement = new Reimbursement(json.getInt("id"));
		
		service.viewAllReimbursementById(reimbursement);
		
	}

	@Override
	protected void doPost(HttpServletRequest req, HttpServletResponse res) throws ServletException, IOException  {
		PrintWriter output = res.getWriter();
		BufferedReader br = req.getReader();
		Service service = new Service();
		JSONObject json = new JSONObject(br.readLine());
		
		String image =json.getString("image");
		System.out.println(image);
		String imagePath="/Users/quandoan/Desktop/pictures/" + image;
		System.out.println(imagePath);
		System.out.println(json);
		Reimbursement reimbursement = new Reimbursement(json.getString("status"),imagePath,json.getInt("amount"),json.getInt("employeeid"),json.getString("employeename"),json.getString("email"),json.getString("password"));
		service.submitReimbursement(reimbursement);
		
		
		
	}
	
}
